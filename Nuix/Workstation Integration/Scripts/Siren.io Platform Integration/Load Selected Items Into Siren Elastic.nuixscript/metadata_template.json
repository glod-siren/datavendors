{
    "index_patterns": [
        "nuix_case_metadata_*",
        "nuix_case_print_*"
    ],
    "priority": 0,
    "template": {
        "settings": {
            "number_of_shards": 1,
            "number_of_replicas": 0,
            "index.highlight.max_analyzed_offset" : 1000000000,
            "index.store.preload": ["nvd", "dvd", "tim", "doc", "dim"],
            "index.requests.cache.enable": false,
            "analysis": {
                "analyzer": {
                    "custom_taxonomy_analyzer": {
                        "tokenizer": "custom_taxonomy_tokenizer"
                    }
                },
                "tokenizer": {
                    "custom_taxonomy_tokenizer": {
                        "type": "path_hierarchy",
                        "delimiter": "|"
                    }
                }
            }
        },
        "mappings": {
            "properties": {
                "geo_location": {
                    "type": "geo_point"
                },
                "Thumbnail_Encoded": {
                    "type":     "binary",
                    "doc_values": true,
                    "store": true
                },
                "PrintPreview_Encoded": {
                    "type":     "binary",
                    "doc_values": true,
                    "store": true
                },
                "PageNumber": {
                    "type": "integer"
                },
                "Item_Text" : {
                    "type": "text",
                    "analyzer": "english"
                },
                "MetaFilePathTree": {
                    "fields": {
                        "tree": {
                            "search_analyzer": "keyword",
                            "fielddata": true,
                            "analyzer": "custom_taxonomy_analyzer",
                            "type": "text"
                        }
                    },
                    "type": "keyword"
                },
                "KindTypeTree": {
                    "fields": {
                        "tree": {
                            "search_analyzer": "keyword",
                            "fielddata": true,
                            "analyzer": "custom_taxonomy_analyzer",
                            "type": "text"
                        }
                    },
                    "type": "keyword"
                },
                "CustodianTree": {
                    "fields": {
                        "tree": {
                            "search_analyzer": "keyword",
                            "fielddata": true,
                            "analyzer": "custom_taxonomy_analyzer",
                            "type": "text"
                        }
                    },
                    "type": "keyword"
                }
            }
        }
    }
}